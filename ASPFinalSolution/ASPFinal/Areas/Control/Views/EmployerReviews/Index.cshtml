@model IEnumerable<ASPFinal.Models.EmployerReview>

@{
    ViewBag.Title = "Employer Reviews";
    Layout = "~/Areas/Control/Views/Shared/_LayoutControl.cshtml";
}

<h2>Employer Reviews</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Candidate.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employer.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Satuts)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Candidate.Firstname @item.Candidate.Lastname
        </td>
        <td>
            @item.Employer.Firstname @item.Employer.Lastname
        </td>
        <td>
                @(item.Text.Length > 50 ? item.Text.Substring(0, 50) + " ..." : item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @if (item.Satuts == true)
            {
                <a href="@Url.Action("edit","EmployerReviews",new { id=item.Id, status=false})" class="statusActive">
                    <span class="badge badge-success">Avtiv</span>
                </a>
            }
            else
            {
                <a href="@Url.Action("edit","EmployerReviews",new { id=item.Id,status=true})" class="statusActive">
                    <span class="badge badge-danger">Deactive</span>
                </a>
            }
            </td>
        <td>
            <a href="@Url.Action("details","EmployerReviews",new { id= item.Id})"><i class="fas fa-info-circle text-warning"></i></a> |
            <a class="jobDelete" href="@Url.Action("delete","EmployerReviews",new { id= item.Id})"><i class="fas fa-trash text-danger"></i></a>
        </td>
    </tr>
}

</table>
