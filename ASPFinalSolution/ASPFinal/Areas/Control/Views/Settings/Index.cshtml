@model IEnumerable<ASPFinal.Models.Setting>

@{
    ViewBag.Title = "Setting";
    Layout = "~/Areas/Control/Views/Shared/_LayoutControl.cshtml";
}

<h2>Setting</h2>

<table class="table table-bordered table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LogoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LogoName)
        </td>
        <td>
            <img width="50" src="~/Uploads/images/@item.Logo"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="@Url.Action("Edit","settings",new { id= item.Id})"><i class="fas fa-edit"></i></a>
        </td>
    </tr>
}

</table>
