@model JobListVM
@{
    ViewBag.Title = "Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="job-list-grid" style="background-image: url('/Uploads/images/@Model.HeaderSetting.Photo')">
    <div class="bg-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="page-header-title text-center text-white">
                    @{Html.RenderPartial("~/Views/Shared/_Breadcrumb.cshtml",model:Model._SidebarVM.Breadcrumb);}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end home -->
<!-- REGISTRATION-FORM START -->
<div class="container">
    <div class="home-form-position">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="home-registration-form bg-white job-list-grid-reg-form mt-5 p-4 mb-3">
                    @{Html.RenderPartial("~/Views/Shared/_Searching.cshtml"); }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- REGISTRATION-FORM END -->

<section class="">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="show-results mt-4">
                    <div class="float-left">
                        <h5 class="text-dark mb-0 pt-2">Showing ( 240 Jobs & Vacancies )</h5>
                    </div>
                    <div class="sort-button float-right">
                        <select class="nice-select">
                            <option data-display="Select">Nothing</option>
                            @foreach (var cat in Model._SidebarVM.JobCategories)
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            @{Html.RenderPartial("~/Views/Shared/_Sidebar.cshtml", model: Model._SidebarVM); }

            <div class="col-lg-9">
                <div class="row">
                    @foreach (var job in Model.Jobs)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="list-grid-item mt-4">
                                <div class="grid-item-content p-2">
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item f-15"><span class="badge badge-success">@job.JobType</span></li>
                                        <li class="list-inline-item float-right">
                                            <div class="grid-fev-icon">
                                                <a href="#" class="text-custom"><i class="mdi mdi-heart"></i></a>
                                            </div>
                                        </li>
                                    </ul>
                                    <div class="grid-list-img mt-3">
                                        <img src="~/Uploads/images/@job.Photo" alt="@job.CompanyName" class="img-fluid mx-auto d-block">
                                    </div>
                                    <div class="grid-list-desc text-center mt-3">
                                        <h5 class="mb-1"><a href="@Url.Action("details","job",new { slug= job.Slug})" class="text-dark">@job.Category.Name</a></h5>
                                        <p class="text-muted f-14 mb-1">@job.Address</p>
                                        <p class="text-muted mb-1">$@(job.MinSalary?.ToString("#")) - $@(job.MaxSalary?.ToString("#"))/month</p>
                                        <p class="text-muted mb-1">
                                            @if (job.JobExpYear == JobExpYear.One)
                                            {
                                                <span>1</span>
                                            }
                                            else if (job.JobExpYear == JobExpYear.Two)
                                            {
                                                <span>2</span>
                                            }
                                            else
                                            {
                                                <span>3</span>
                                            }
                                            Years Exp.
                                        </p>
                                    </div>
                                </div>
                                <hr class="mt-0 mb-0">
                                <div class="apply-button text-center mt-2 mb-2">
                                    <a href="#" class="btn btn-custom btn-sm">Apply Now</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>


        @{Html.RenderPartial("~/Views/Shared/_Pagination.cshtml", model: Model.Pagination); }
    </div>
</section>
@section scripts{

    <script src="~/Public/js/jquery.nice-select.min.js"></script>
}