@model PaginationVM
<div class="row">
    <div class="col-lg-12">
        <nav aria-label="Page navigation example">
            <ul class="pagination job-pagination justify-content-center">
                @if (Model.CurrentPage != 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("index", $"{Model.Page}", new { page = (Model.CurrentPage-1)})" tabindex="-1" aria-disabled="true">
                            <i class="mdi mdi-chevron-double-left f-15"></i>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (Model.CurrentPage == i)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("index", $"{Model.Page}", new { page = i})">@i</a></li>
                    }
                }
                @if (Model.CurrentPage != (Model.PageCount))
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("index", $"{Model.Page}", new { page = (Model.CurrentPage+1)})">
                            <i class="mdi mdi-chevron-double-right f-15"></i>
                        </a>
                    </li>
                }

            </ul>
        </nav>
    </div>
</div>
