<!-- DOWNLOAD APP END -->
<!-- ABOUT CLIENTS START -->
<section class="section">
    <div class="container">
        @{Html.RenderPartial("~/Views/Shared/_Partners.cshtml",model:Model.Partners); }
    </div>
</section>
<!-- ABOUT CLIENTS END -->

@section scripts{

    <script src="~/Public/js/jquery.nice-select.min.js"></script>
}

